/* Style chung cho các nút */
.btn-custom {
    border-radius: 5px; /* Bo góc mềm mại */
    padding: 8px 20px; /* Kích thước padding hợp lý */
    font-size: 16px; /* Cỡ chữ dễ nhìn */
    text-transform: capitalize; /* Viết chữ in hoa đầu từ */
    font-weight: 500; /* Độ đậm vừa phải */
    border: none; /* Loại bỏ đường viền */
    cursor: pointer; /* Biểu tượng con trỏ khi hover */
    transition: all 0.3s ease; /* Hiệu ứng mượt khi hover */
}

/* Nút Convert to Speech */
.btn-custom-primary {
    background-color: #007bff; /* Màu xanh dương */
    color: white; /* Màu chữ trắng */
}

.btn-custom-primary:hover {
    background-color: #0056b3; /* Màu đậm hơn khi hover */
}

/* Nút Download Audio */
.btn-custom-success {
    background-color: #28a745; /* Màu xanh lá cây */
    color: white; /* Màu chữ trắng */
}

.btn-custom-success:hover {
    background-color: #1e7e34; /* Màu đậm hơn khi hover */
}

/* Khoảng cách giữa các nút */
.button-group {
    margin-top: 10px;
    display: flex;
    gap: 15px; Khoảng cách giữa các nút
    align-items: center;
}

